<div class="container">
  <div class="row">
    <h2>ユーザー一覧</h2>
    <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 user-info">
          <%= profile_img(user) %>
          <br>
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
          <br>
          <ul class="btn-icon">
            <% if user.id == current_user.id %>
              <li><button type="button" class="btn btn-default navbar-btn"><%= link_to "登録情報を編集する", edit_user_registration_path(user.id) %></button></li>
            <% end %>
            <li><button type="button" class="btn btn-default navbar-btn"><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></button></li>
            <li><%= render 'follow_form', user: user if signed_in? %></li>
          </ul>
      </div>
      <% end %>
  </div>
</div>
